<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.Page8Fragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="8dp">

       <TextView
           android:id="@+id/langkah_tigabelas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:justificationMode="inter_word"
           android:text="@string/langkah_tigabelas"
           android:textColor="@color/black"
           app:layout_constraintTop_toTopOf="parent"
           tools:targetApi="o" />

       <ImageView
           android:id="@+id/ivLangkah_tigabelas"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/dduabelas"
           app:layout_constraintTop_toBottomOf="@id/langkah_tigabelas"/>

       <TextView
           android:id="@+id/langkah_empatbelas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/langkah_empatbelas"
           android:justificationMode="inter_word"
           android:textColor="@color/black"
           android:padding="8dp"
           app:layout_constraintTop_toBottomOf="@id/ivLangkah_tigabelas"
           tools:targetApi="o" />

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/dtigabelas"
           app:layout_constraintTop_toBottomOf="@id/langkah_empatbelas"/>
   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>