<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".text.SembilanFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:padding="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/tigabelas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:text="@string/tigabelas"
           android:textColor="@color/black"
           app:layout_constraintTop_toTopOf="parent"/>

       <ImageView
           android:id="@+id/ivTigabelas"
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:src="@drawable/duadua"
           app:layout_constraintTop_toBottomOf="@id/tigabelas"/>

       <ImageView
           android:id="@+id/ivTigabelas1"
           android:layout_width="match_parent"
           android:layout_height="160dp"
           android:src="@drawable/duatiga"
           app:layout_constraintTop_toBottomOf="@id/ivTigabelas"/>

       <TextView
           android:id="@+id/empatbelas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:textColor="@color/black"
           android:text="@string/empatbelas"
           app:layout_constraintTop_toBottomOf="@id/ivTigabelas1"/>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/duaempat"
           app:layout_constraintTop_toBottomOf="@id/empatbelas"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>