<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gui.Page7Fragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:padding="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/langkah_sebelas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:textColor="@color/black"
           android:text="@string/langkah_sebelas"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/ivLangkah_sebelas"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/dsepuluh"
           app:layout_constraintTop_toBottomOf="@id/langkah_sebelas"/>

       <TextView
           android:id="@+id/langkah_duableas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/langkah_duabelas"
           android:textColor="@color/black"
           android:padding="8dp"
           app:layout_constraintTop_toBottomOf="@id/ivLangkah_sebelas"/>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:src="@drawable/dsebelas"
          app:layout_constraintTop_toBottomOf="@id/langkah_duableas"/>
   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>