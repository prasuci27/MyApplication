<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".gui.Page15Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/langkah_duaempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/langkah_duaempat"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivLangkah_duasembilan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/dduasembilan"
            app:layout_constraintTop_toBottomOf="@id/langkah_duaempat"/>

        <TextView
            android:id="@+id/langkah_dualima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/langkah_dualima"
            android:padding="8dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/ivLangkah_duasembilan"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/dtigapuluh"
            app:layout_constraintTop_toBottomOf="@id/langkah_dualima"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>