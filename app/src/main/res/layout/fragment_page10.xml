<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.Page10Fragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="8dp">

       <TextView
           android:id="@+id/langkah_enambelas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:justificationMode="inter_word"
           android:text="@string/langkah_enambelas"
           android:textColor="@color/black"
           app:layout_constraintTop_toTopOf="parent"
           tools:targetApi="o" />

       <ImageView
           android:id="@+id/ivLangkah_enambelas"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/dlimabelas"
           app:layout_constraintTop_toBottomOf="@+id/langkah_enambelas"/>
       
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/denambelas"
           app:layout_constraintTop_toBottomOf="@+id/ivLangkah_enambelas"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>