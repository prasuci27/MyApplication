<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".text.EnamFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sembilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/sembilan"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivSembilan"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/duabelas"
            app:layout_constraintTop_toBottomOf="@id/sembilan"/>

        <ImageView
            android:id="@+id/ivSembilan1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/tigabelas"
            app:layout_constraintTop_toBottomOf="@id/ivSembilan"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>